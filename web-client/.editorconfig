root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 121

[*.json]
indent_style = space
indent_size = 2

[{package.json,.stylelintrc.json,.babelrc}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

# Airbnb Style Guide Rules
[*.{js,jsx,ts,tsx}]
quote_type = single
charset = utf-8
